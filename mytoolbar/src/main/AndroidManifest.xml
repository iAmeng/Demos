<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="imeng.toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="imeng.toolbar.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AtyToolbarA"
            android:theme="@style/AppThemeA"></activity>

        <activity
            android:name=".AtyToolbarB"
            android:theme="@style/AppThemeB"/>

        <activity
            android:name=".AtyToolbarC"
            android:theme="@style/AppThemeC"/>

        <activity
            android:name=".AtyToolbarD"
            android:theme="@style/AppThemeC"/>
        <activity
            android:name=".AtyToolbarE"
            android:theme="@style/AppThemeC"/>
    </application>

</manifest>
